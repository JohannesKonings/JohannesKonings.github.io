{
  "name": "johanneskonings.github.io",
  "version": "1.0.0",
  "description": "Blogging and Accounts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "knip": "knip",
    "format:check": "pnpm prettier --check .",
    "format:fix": "pnpm prettier --write .",
    "lint:check": "pnpm oxlint",
    "lint:fix": "pnpm oxlint --fix",
    "dev:astro": "pnpm --filter astro dev",
    "dev:tanstack": "pnpm --filter tanstack dev",
    "demo:theme": "node websites/tanstack/scripts/theme-toggle-demo.mjs",
    "build:astro": "pnpm --filter astro build",
    "build:tanstack": "pnpm --filter tanstack build",
    "lhci:tanstack": "pnpm dlx @lhci/cli collect --url=\"http://127.0.0.1:3000/\" --url=\"http://127.0.0.1:3000/blog\" --url=\"http://127.0.0.1:3000/blog/2026-02-02-tanstack-ai-bedrock-simple\" --url=\"http://127.0.0.1:3000/search\" --numberOfRuns=1 --settings.chromeFlags='--headless=new --no-sandbox --disable-dev-shm-usage --disable-gpu' --startServerCommand=\"pnpm --filter tanstack exec node .output/server/index.mjs\"",
    "verify:tanstack": "tsx scripts/verifyTanstack.ts",
    "tsc": "tsgo",
    "tsc:check": "tsgo --noEmit",
    "tsc:watch": "tsgo -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JohannesKonings/JohannesKonings.github.io.git"
  },
  "author": "Johannes Konings",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/JohannesKonings/JohannesKonings.github.io/issues"
  },
  "homepage": "johanneskonings.dev",
  "devDependencies": {
    "@prettier/plugin-oxc": "0.1.3",
    "@types/node": "25.3.0",
    "@typescript/native-preview": "7.0.0-dev.20260219.1",
    "execa": "9.6.1",
    "knip": "5.84.1",
    "oxlint": "1.48.0",
    "playwright": "1.58.2",
    "prettier": "3.8.1",
    "tsx": "4.21.0",
    "typescript": "5.9.3"
  },
  "type": "module",
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@tailwindcss/oxide",
      "esbuild",
      "sharp"
    ]
  }
}
