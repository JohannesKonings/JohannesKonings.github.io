---
import { withBase } from "@lib/base";

interface Props {
	title: string;
	description: string;
	image?: string;
	coverImageSrc: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const {
	title,
	description,
	image = withBase("/open-graph.jpg"),
	coverImageSrc,
} = Astro.props;

const faviconPath = withBase("/favicon.ico");
const primaryFontPath = withBase("/fonts/CascadiaMonoNF.woff2");
const secondaryFontPath = withBase("/fonts/CascadiaMonoNF-SemiBold.woff2");
const sitemapPath = withBase("/sitemap-index.xml");
const rssPath = withBase("/rss.xml");
const themeScriptPath = withBase("/js/theme.js");
const scrollScriptPath = withBase("/js/scroll.js");
const animateScriptPath = withBase("/js/animate.js");
---

<!-- Global Metadata -->
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width,initial-scale=1" />
<link rel="icon" type="image/x-icon" href={faviconPath} />
<meta name="generator" content={Astro.generator} />

<link
  rel="preload"
  href={primaryFontPath}
  as="font"
  type="font/woff2"
  crossorigin
/>
<link
  rel="preload"
  href={secondaryFontPath}
  as="font"
  type="font/woff2"
  crossorigin
/>

<!-- Canonical URL -->
<link rel="canonical" href={canonicalURL} />

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content="website" />
<meta property="og:url" content={Astro.url} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />

<!-- Twitter -->
<meta property="twitter:card" content="summary_large_image" />
<meta property="twitter:url" content={Astro.url} />
<meta property="twitter:title" content={title} />
<meta property="twitter:description" content={description} />

{Astro.url.pathname === '/' ? (
  <meta property="og:image" content={new URL(image, Astro.url)} />
  <meta property="twitter:image" content={new URL(image, Astro.url)} />
) : Astro.url.pathname.startsWith('/blog') ? (
  <meta property="og:image" content={new URL(coverImageSrc, Astro.url)} />
  <meta property="twitter:image" content={new URL(image, Astro.url)} />
) : (
  <meta property="og:image" content={new URL(image, Astro.url)} />
  <meta property="twitter:image" content={new URL(image, Astro.url)} />
)}


<!-- Sitemap -->
<link rel="sitemap" href={sitemapPath} />

<!-- RSS Feed -->
<link
  rel="alternate"
  type="application/rss+xml"
  title={title}
  href={rssPath}
/>

<!-- Global Scripts -->
<script is:inline src={themeScriptPath}></script>
<script is:inline src={scrollScriptPath}></script>
<script is:inline src={animateScriptPath}></script>

<!-- <ViewTransitions  /> -->

<script>
  import type { TransitionBeforeSwapEvent } from "astro:transitions/client";
  document.addEventListener("astro:before-swap", (e) =>
    [
      ...(e as TransitionBeforeSwapEvent).newDocument.head.querySelectorAll(
        'link[as="font"]'
      ),
    ].forEach((link) => link.remove())
  );
</script>
